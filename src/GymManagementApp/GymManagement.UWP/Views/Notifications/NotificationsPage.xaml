<Page
    x:Class="GymManagement.UWP.Views.Notifications.NotificationsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModels="using:GymManagement.UWP.ViewModels">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ScrollViewer для прокручування сповіщень -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <!-- Контейнер для ListView -->
            <Grid Background="White" BorderBrush="White" BorderThickness="1" Padding="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" CornerRadius="10">
                <!-- ListView для відображення сповіщень -->
                <ListView
                    ItemsSource="{Binding Notifications}"
                    SelectedItem="{Binding SelectedNotification, Mode=TwoWay}"
                    Margin="0,0,0,10"
                    Background="Transparent">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,10" Padding="10" CornerRadius="10">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding Text}" FontSize="14" Margin="0,0,0,5"/>
                                    <!-- Кнопка під текстом зліва -->
                                    <Button Content="Mark as Read" Command="{Binding DataContext.MarkAsReadCommand, ElementName=Page}" CommandParameter="{Binding}" HorizontalAlignment="Left" Width="120" Background="Black" Foreground="White" BorderBrush="Black" BorderThickness="1" CornerRadius="10"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                    <!-- Встановлюємо ширину ListView для заповнення простору -->
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Grid>
        </ScrollViewer>

        <!-- Кнопка для позначення всіх сповіщень як прочитаних -->
        <Button
            Grid.Row="1"
            Content="Mark all as Read"
            Command="{Binding MarkAllAsReadCommand}"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="0,20,20,0"
            Background="Black"
            Foreground="White"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="10"
            Width="180"
            Height="40"/>
    </Grid>
</Page>
