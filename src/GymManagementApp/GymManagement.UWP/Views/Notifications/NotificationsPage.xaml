<Page
    x:Class="GymManagement.UWP.Views.Notifications.NotificationsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModels="using:GymManagement.UWP.ViewModels">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ScrollViewer to enable scrolling of notifications -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <!-- ListView to display notifications -->
            <ListView
                ItemsSource="{Binding Notifications}"
                SelectedItem="{Binding SelectedNotification, Mode=TwoWay}"
                Margin="0,0,0,10">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Title}" FontWeight="Bold" />
                            <TextBlock Text="{Binding Text}" />
                            <!-- Button to mark as read -->
                            <Button Content="Mark as Read" Command="{Binding DataContext.MarkAsReadCommand, ElementName=Page}" CommandParameter="{Binding}" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>

        <!-- Button to mark all notifications as read -->
        <Button
            Grid.Row="1"
            Content="Mark all as Read"
            Command="{Binding MarkAllAsReadCommand}" />
    </Grid>
</Page>
