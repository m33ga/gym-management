<Page
    x:Class="GymManagement.UWP.Views.Notifications.NotificationsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModels="using:GymManagement.UWP.ViewModels">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ListView to display notifications -->
        <ListView
             ItemsSource="{Binding Notifications}"
    SelectedItem="{Binding SelectedNotification, Mode=TwoWay}"
    DisplayMemberPath="Text"
    Margin="0,0,0,10" />

        <!-- Button to mark as read -->
        <Button
            Grid.Row="1"
            Content="Mark as Read"
            Command="{Binding MarkAsReadCommand}" />
    </Grid>
</Page>
