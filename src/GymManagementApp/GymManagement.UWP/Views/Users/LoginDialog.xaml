<Page
    x:Class="GymManagement.UWP.Views.Users.LoginDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GymManagement.UWP.Views.Users"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F5F5F5">

    <Grid>
        <!-- Centered Panel -->
        <Border
            Width="970"
            Height="733"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="White"
            CornerRadius="10"
            Padding="30"
            >

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" Spacing="20">
                <!-- Title -->
                <TextBlock
                    MaxWidth="300"
                    Text="Login"
                    FontSize="36"
                    FontWeight="Bold"
                    Foreground="Black"
                    HorizontalAlignment="Center" />

                <!-- Email Field -->
                <TextBox
                    CornerRadius="8"
                    Header="Email"
                    MaxWidth="600"
                    PlaceholderText="Current email"
                    HorizontalAlignment="Stretch"
                    Margin="0,10,0,0" 
                    Text="{x:Bind UserViewModel.Email, Mode=TwoWay}"/>

                <!-- Password Field -->
                <PasswordBox
                    CornerRadius="8"
                    Header="Password"
                    MaxWidth="600"
                    PlaceholderText="Current password"
                    HorizontalAlignment="Stretch"
                    Margin="0,10,0,0"
                    Password="{x:Bind UserViewModel.Password, Mode=TwoWay}"/>

                <!-- Remember Me -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <CheckBox Content="Remember Me" VerticalAlignment="Center" />
                </StackPanel>

                <!-- Login Button -->
                <Button
                    Content="Login"
                    Background="#007BFF"
                    Foreground="White"
                    BorderBrush="Transparent"
                    Padding="10,5"
                    HorizontalAlignment="Stretch"
                    FontSize="16"
                    CornerRadius="5" 
                    Tapped="LoginButtonTapped"/>

                <!-- Sign Up Link -->
                <TextBlock HorizontalAlignment="Center" FontSize="14">
                    <Run Text="Don't Have An Account? " Foreground="#000000" FontFamily="sans serif" />
                    <Run Text="Create Account" Foreground="#007BFF" />
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Page>
