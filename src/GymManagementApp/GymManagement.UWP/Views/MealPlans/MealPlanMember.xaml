<Page x:Class="YourNamespace.Views.MealPlans.MealPlanMemberPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:YourNamespace.Views.MealPlans"
      xmlns:viewModels="using:GymManagement.UWP.ViewModels">

    <Grid Padding="20">
        <StackPanel>
            <TextBlock Text="Meal Plan" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" />
            <ItemsControl ItemsSource="{Binding MealPlans}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="10" Padding="10" BorderBrush="Gray" BorderThickness="1" CornerRadius="10">
                            <StackPanel>
                                <TextBlock Text="{Binding Day}" FontSize="18" FontWeight="SemiBold" />
                                <TextBlock Text="{Binding Goal}" FontSize="16" />
                                <TextBlock Text="{Binding TotalCalories}" FontSize="16" />
                                <TextBlock Text="Meals:" FontSize="16" FontWeight="SemiBold" Margin="0,10,0,0" />
                                <ItemsControl ItemsSource="{Binding Meals}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding DishName}" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</Page>
